<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="MailApp">

  <Id>9f5cbd1e-0a95-4c80-9f9b-abc123def456</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Modelyzr</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="File Linklist Creator"/>
  <Description DefaultValue="Converts local file paths to clickable links."/>

  <IconUrl DefaultValue="https://unpkg.com/simple-icons@v9/icons/microsoftoutlook.png"/>
  <SupportUrl DefaultValue="https://modelyzr.com"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.8">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteItem</Permissions>

  <VersionOverrides xmlns="https://schemas.microsoft.com/office/taskpaneappversionoverrides" Version="1.0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabMessage">
              <Group id="msgComposeGroup">
                <Label resid="groupLabel"/>
                <Control xsi:type="Button" id="msgComposeButton">
                  <Label resid="buttonLabel"/>
                  <Supertip>
                    <Title resid="buttonTitle"/>
                    <Description resid="buttonDesc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>insertFileLinks</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://unpkg.com/simple-icons@v9/icons/microsoftoutlook.png"/>
<bt:Image id="icon32" DefaultValue="https://unpkg.com/simple-icons@v9/icons/microsoftoutlook.png"/>
<bt:Image id="icon80" DefaultValue="https://unpkg.com/simple-icons@v9/icons/microsoftoutlook.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="functionFileUrl" DefaultValue="https://localhost:3000/link-creator.js"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Dateipfade"/>
        <bt:String id="buttonLabel" DefaultValue="Pfade verlinken"/>
        <bt:String id="buttonTitle" DefaultValue="Dateipfade verlinken"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="buttonDesc" DefaultValue="Scans the email for file paths and appends clickable links."/>
      </bt:LongStrings>
    </Resources>

    <FunctionFile resid="functionFileUrl"/>
  </VersionOverrides>
  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost:3000/taskpane.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>
</OfficeApp>
